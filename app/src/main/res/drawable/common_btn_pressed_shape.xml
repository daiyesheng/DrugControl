<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">

            <gradient
                android:angle="45"
                android:endColor="@color/btn_color_pressed"
                android:startColor="@color/btn_color_pressed" />

            <solid android:color="@color/btn_color_pressed" />

            <corners
                android:bottomLeftRadius="@dimen/btn_corner_radius"
                android:bottomRightRadius="@dimen/btn_corner_radius"
                android:topLeftRadius="@dimen/btn_corner_radius"
                android:topRightRadius="@dimen/btn_corner_radius" />
        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">

            <gradient
                android:angle="45"
                android:endColor="@color/black_15"
                android:startColor="@color/black_15" />

            <solid android:color="@color/black_15" />

            <corners
                android:bottomLeftRadius="@dimen/btn_corner_radius"
                android:bottomRightRadius="@dimen/btn_corner_radius"
                android:topLeftRadius="@dimen/btn_corner_radius"
                android:topRightRadius="@dimen/btn_corner_radius" />
        </shape>
    </item>

</layer-list>